import sqlite3
 
# Connect to the database
conn = sqlite3.connect('students_database.db')  
cursor = conn.cursor()
 
# Execute a SELECT query on the "students" table
cursor.execute('SELECT * FROM students')
 
# Fetch all rows
rows = cursor.fetchall()
 
# Display the data
for row in rows:
    print(row)
 
# Close the database connection
conn.close()
 